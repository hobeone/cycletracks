<%= error_messages_for :activity %>
<form action="/activities" class="new_activity" enctype="multipart/form-data" id="new_activity" method="post">
   <% if protect_against_forgery? %>
    <div style="margin:0;padding:0">
      <input name="authenticity_token" type="hidden" value="<%=form_authenticity_token%>" />
    </div>
  <% end %>
  <label for="tcx_file">File:</label><input id="tcx_file" name="tcx_file" size="30" type="file" />
  <p/>
  <label for="id_tags">Tags:</label><input id="tags_list" type="text" name="tags_list" size="30" maxlength="100" />
  <p/>
  <input id="submit" name="commit" type="submit" value="Upload" />
</form>
