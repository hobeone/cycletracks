<div id="activity_table">
  <div id="userSummary">
    <div id="summaryTitle">Summary for <%= @current_user.name %>:</div>
    <div id="userSummaryContent">
      <div class="summaryGroup">
        <div class="userSummaryItem">
          <span class="summaryLabel">Total Distance:</span>
          <span class="summaryField"><%= @user_totals[:total_meters] %></span>
        </div>
        <div class="userSummaryItem">
          <span class="summaryLabel">Total Climbing:</span>
          <span class="summaryField"><%= @user_totals[:total_ascent] %></span>
        </div>
        <div class="userSummaryItem">
          <span class="summaryLabel">Total Time:</span>
          <span class="summaryField"><%= @user_totals[:total_time] %></span>
        </div>

      </div>
      <div class="summaryGroup">

        <div class="userSummaryItem">
          <span class="summaryLabel">Rolling Time:</span>
          <span class="summaryField"><%= @user_totals[:rolling_time] %></span>
        </div>
        <div class="userSummaryItem">
          <span class="summaryLabel">Cadence:</span>
          <span class="summaryField"><%= @user_totals[:average_cadence] %> / <%= @user_totals[:maximum_cadence] %> rpm</span>
        </div>

        <div class="userSummaryItem">
          <span class="summaryLabel">Heart Rate:</span>
          <span class="summaryField"><%= @user_totals[:average_bpm] %> / <%= @user_totals[:maximum_bpm] %> bpm</span>
        </div>

      </div>
      <div class="summaryGroup">

        <div class="userSummaryItem">
          <span class="summaryLabel">Average Speed:</span>
          <span class="summaryField"><%= @user_totals[:average_speed] %> </span>
        </div>
        <div class="userSummaryItem">
          <span class="summaryLabel">Max Speed:</span>
          <span class="summaryField"><%= @user_totals[:maximum_speed] %></span>
        </div>
        <div class="userSummaryItem">
          <span class="summaryLabel">Calories:</span>
          <span class="summaryField"><%= @user_totals[:total_calories] %> Cal</span>
        </div>
      </div>
    </div>
  </div>
<br/>
<h2><%=@current_user.name%>'s tracks:</h2>
<div class="datatable">
<table cellspacing="2" width="100%">
  <thead>
  <tr>
    <th><a href='/mytracks/name'>Activity Name</a></th>
    <th><a href='/mytracks/start_time'>Start Time<br/>End Time</a></th>
    <th><a href='/mytracks/total_meters'>Distance</a></th>
    <th><a href='/mytracks/rolling_time'>Time<br/>(Rolling)</a></th>
    <th><a href='/mytracks/average_cadence'>Avg/Max Cadence</a></th>
    <th><a href='/mytracks/average_bpm'>Avg/Max BPM</a></th>
    <th><a href='/mytracks/average_speed'>Avg/Max Speed</a></th>
    <th><a href='/mytracks/total_ascent'>Ascent<br/>Decent</a></th>
    <th><a href='/mytracks/total_calories'>Calories</a></th>
    <th>Delete</th>
  </tr>
</thead>
<tbody>
  <% for entry in @activities %>
    <tr id="activity_<%=entry.id%>">
      <td><%= link_to entry.name, activity_url(entry) %><br/></td>
      <td><%= entry.start_time.strftime('%D %r') %><br/><%= entry.end_time.strftime('%D %r') %></td>
      <td><%= entry.total_meters%> </td>
      <td><%= entry.total_time %>
        <br/>
        (<%= entry.rolling_time %>)
      </td>
      <td><%= entry.average_cadence %> rpm<br/> <%= entry.maximum_cadence %> rpm</td>
      <td><%= entry.average_bpm %> bpm<br/> <%= entry.maximum_bpm %> bpm</td>
      <td><%= entry.average_speed %> <br/> <%= entry.maximum_speed %></td>
      <td><%= entry.total_ascent %> <br/> <%=entry.total_descent%></td>
      <td><%= entry.total_calories %> Cal</td>
      <td><%= link_to_function('delete', "delete_activity(#{entry.id})") %></td>
    </tr>
    <% end %>
  </tbody>
</table>

</div>
