<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title>Cycletracks: <%= controller.action_name %></title>
  <%= stylesheet_link_tag 'style.css' %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "http://www.google.com/jsapi?key=ABQIAAAAoU2YDajIyJPdof6GDzJKshRpKIwH9gjHw5l4siVVB7mD23aSXhSHvrtQQCEPRhQENq4B3lk8joMYzQ" %>

  <%= yield :head %>
</head>
<body <%= yield :body_extra %>>
    <div id="header">
      <div id="header_inner" class="fixed">
        <div id="logo">
          <h1>Cycletracks: <%= @page_title %></h1>
        </div>

        <div id="menu">
          <ul>
            <li><a href="/activities/">My Tracks</a></li>
            <li><a href="/reports/">Reports</a></li>
            <li><%= link_to 'Upload', new_activity_url %></li>
            <li><%=link_to 'Settings', user_url(current_user)%></li>
            <li><a href="/about/">About</a></li>
          </ul>
        </div>

      </div>
    </div>
    <div id="main">
      <div id="main_inner" class="fixed">
        <div id="primaryContent_columnless">
          <div id="columnA_columnless">
<p style="color: green"><%= flash[:notice] %></p>

<%= yield  %>

         </div>
        </div>
        <br class="clear" />

      </div>

    </div>

    <div id="footer" class="fixed">
